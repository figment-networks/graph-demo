    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cosmos worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cosmos-worker",
            "env": {
                "CHAIN_ID": "mainnet",
                "NETWORK": "cosmos",
                "COSMOS_GRPC_ADDR": "0.0.0.0:9090",
            }
        },
        {
            "name": "Manager",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/manager",
            "env": {
                "ADDRESS": "0.0.0.0:8085",
                "DATABASE_URL": "postgres://manager:manager@0.0.0.0:5432/manager?sslmode=disable"
            }
        },
        {
            "name": "Manager migration",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/manager-migration",
            "env": {
                "DATABASE_URL": "postgres://manager:manager@0.0.0.0:5432/manager?sslmode=disable"
            }
        },
        {
            "name": "Runner",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/runner",
            "env": {
                "MANAGER_URL": "http://0.0.0.0:8088",
                "HTTP_PORT": "8099"
            }
        }
    ]
}