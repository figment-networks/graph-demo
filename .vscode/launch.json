{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cosmos worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cosmos-worker",
            "env": {
                "CHAIN_ID": "cosmoshub-4",
                "COSMOS_GRPC_ADDR": "0.0.0.0:9090",
                "MANAGER_URL": "ws://0.0.0.0:8075/work",
            },
            "buildFlags": "-race"
        },
        {
            "name": "Manager",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/manager",
            "env": {
                "ADDRESS": "0.0.0.0:8075",
                "DATABASE_URL": "postgres://manager:manager@0.0.0.0:5432/manager?sslmode=disable",
            },
            "buildFlags": "-race"
        },
        {
            "name": "Manager migration",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/manager-migration",
            "env": {
                "DATABASE_URL": "postgres://manager:manager@0.0.0.0:5432/manager?sslmode=disable"
            },
            "buildFlags": "-race"
        },
        {
            "name": "Runner",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/runner",

            "env": {
                "SUBGRAPHS": "${workspaceFolder}/subgraphs/simple-example",
                "MANAGER_URL": "ws://0.0.0.0:8075/runner"
            },


            "buildFlags": "-race"
        }
    ]
}
